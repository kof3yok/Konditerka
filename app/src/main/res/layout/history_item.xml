<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="1.0">

    <LinearLayout
        android:id="@id/llHistory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/green"
        android:orientation="vertical">

        <TextView
            android:id="@id/txtOrderAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5.0dip"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="12.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/txtHistoryDate"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.5"
                android:padding="5.0dip"
                android:text="01.01.2024"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <TextView
                android:id="@id/txtHistoryStatus"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.5"
                android:padding="5.0dip"
                android:text="Delivered"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/txtHistoryDriver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="5.0dip"
                android:text="Ruslan(+79111234567)"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/txtHistoryPrice"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="5.0dip"
                android:text="2000 rub"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <ImageButton
                android:id="@id/btnOpenOrder"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:background="@color/transparent"
                app:srcCompat="@drawable/baseline_launch_24" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="3.0dip"
            android:height="3.0dip"
            android:background="@color/black" />
    </LinearLayout>
</LinearLayout>